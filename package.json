{
  "name": "flowchart-json-editor",
  "version": "1.0.0",
  "description": "A desktop Flowchart Editor for branching narrative and game script writing",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "clean:release": "rimraf release/win-unpacked",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && npm run clean:release && electron-builder",
    "dist:alt": "npm run build && electron-builder -c.directories.output=release-alt",
    "start": "electron .",
    "preview": "vite preview"
  },
  "keywords": ["electron", "flowchart", "editor", "narrative"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/archiver": "^6.0.3",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.flowchart.json.editor",
    "productName": "Flowchart Json Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-react/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "signAndEditExecutable": false,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "archiver-utils": "^5.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

